<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">


        <Table updateFinished="onTableLoad" headerText="Marketing Activities"
			items="{MarketingActivity>/}" sticky="ColumnHeaders">
			<columns>
				<Column headerMenu="columnHeaderMenu" width="30%"><Text text="Activity" /></Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End"><Text text="July" /></Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End"><Text text="August" /></Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End"><Text text="September" /></Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End"><Text text="Plan Total" /></Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End"><Text text="Measure" /></Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="3.5rem"><Text text="Urban" /></Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="5.2rem"><Text text="Semiurban" /></Column>
				<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="3.5rem"><Text text="Rural" /></Column>
				<Column minScreenWidth="Tablet" demandPopin="true"><Text text="Details" /></Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
					<cells>
						<ObjectIdentifier title="{MarketingActivity>ActivityName}" text="{MarketingActivity>remarks}: "></ObjectIdentifier>
                        <Text text="{MarketingActivity>M1}" />
                        <Text text="{MarketingActivity>M2}" />
                        <Text text="{MarketingActivity>M3}" />
						<Text text="{MarketingActivity>M3}" />
                        <Text text="{MarketingActivity>Measure}" />
						<core:Icon src="sap-icon://sys-enter" color="green"></core:Icon>
						<core:Icon src="sap-icon://sys-enter" color="green" visible="false"></core:Icon>
						<core:Icon src="sap-icon://sys-enter" color="green"></core:Icon>
						<Text />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
   
</core:FragmentDefinition>